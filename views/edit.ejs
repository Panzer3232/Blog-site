<div class="apple">
<div id="blow" class="ui main text container segment">
    <div id="font"class="ui huge header">Edit <%=blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
            <div class="field">
              <label>Title</label>
              <input type="text" name="blog[title]" value="<%=blog.title %>">
            </div>
            <div class="field">
              <label>Image</label>
              <input type="text" name="blog[image]" value="<%=blog.image %>">
            </div>
            <div class="field">
                    <label>Text</label>
                    <textarea name="blog[body]"><%= blog.body%></textarea>
                  </div>
                  <input id= "low"class="ui inverted blue button" type="submit">
                  </form>
             </div>
            </div>
            

<% include partials/footer %>