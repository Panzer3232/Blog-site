<% include partials/header %>
<style>
    .mango{
        margin-top: 7em;
    }
    #content{
            display: inline;
        }
</style>
<div class="mango">
<div class="ui main text container">
    <div class="ui huge header">Bloggg</div>
    <div class="ui top attached segment">
        <div class="ui   divided items ">
            <% blogs.forEach(function(blog){ %>
                <div class="horizontal divider items" style="margin:15px;">
                    <div class="image">
                        <img height="50%" width="100%"   src="<%= blog .image %>">
                    </div>
                    <div id="content">
                        <a class="header" href="/blogs/<%= blogs._id%>"><%= blog.title%></a>
                        <div class = "meta">
                            <span><%= blog.created.toDateString()%></span>
                        </div>
                        <div class="description">
                         <p><%- blog.body.substring(0,100)%>...</p>
                        </div>
                        <div class="extraa">
                        <a class="ui floated basic purple button" href="/blogs/<%= blog._id%>">
                        Read More
                        <i class="right chevron icon"></i>
                        </a>
                    </div>
                    </div>
                     </div>
                <% })%>
        </div>
    </div>
</div>   
</div>
 <% include partials/footer %>